{
  "name": "quickacces_custom",
  "version": "1.7.0",
  "description": "A custom Electron application for quick access",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "node scripts/bump-version.js && electron-builder && node scripts/organize-build.js"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "build": {
    "appId": "com.mercred.quickacces",
    "productName": "QuickAcces",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon3.png"
    },
    "nsis": {
      "createDesktopShortcut": false,
      "createStartMenuShortcut": false,
      "shortcutName": "QuickAcces"
    }
  },
  "dependencies": {
    "electron-store": "^10.1.0",
    "electron-updater": "^6.6.2"
  },
  "author": "MERCRED"
}
